<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:clipToPadding="true"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/text_40"
    android:fitsSystemWindows="true"
    tools:context="maintel.commontest.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:elevation="3dp"
        android:layout_height="?attr/actionBarSize">

    </LinearLayout>

    <Button
        android:id="@+id/btn_open_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="选择图片" />


    <Button
        android:id="@+id/btn_open_album_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="联网测试1" />

    <Button
        android:id="@+id/btn_open_album_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="联网测试2" />

    <Button
        android:id="@+id/btn_open_album_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="联网测试3" />

    <Button
        android:id="@+id/btn_recycle_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="recycleTest" />

    <Button
        android:id="@+id/btn_green_dao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="greenDao" />

    <Button
        android:id="@+id/btn_fine_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="fineReport" />

    <Button
        android:id="@+id/btn_gson_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="gsonTest" />
</LinearLayout>
